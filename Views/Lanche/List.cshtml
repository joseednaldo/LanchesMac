<!--Significa também que a view é fortimente tipada-->
@model IEnumerable<LanchesMac.Models.Lanche>
@*Outro exemplo de uso:
    @using LanchesMac.Models
    @model IEnumerable<Lanche>*@

<div>
    <h2>Todos os Lanches</h2>
</div>


@*@model  => é apenas a diretiva  que aponta para o tipo lanche.
Model  => é a propriedade que acessa o tipo
         Representa a lista de lanche.
    *@
@foreach (var lanche in Model) 
{
    <div>
        <h4>Lanche: @lanche.Nome</h4>
        <p><img src="@lanche.ImagemUrl"/></p>
        <p>Preco: @lanche.Preco.ToString(c)</p>
    </div>
}